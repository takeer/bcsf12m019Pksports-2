
@{
    ViewBag.Title = "AddNewCategory";
}

@model Practice1_Web.Models.Category

<div class="container" >
    <div class="row">
        @*shows a white strip at the top*@
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading ">
                    <h4><i class="fa fa-fw fa-check"></i> Add New Category</h4>
                </div>
            </div>
        </div>


    </div>


    <div class="container">
        <form action="/Admin/AddCategory" method="post" >

            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Category Name" })


            <input type="submit" value="Save" class="form-control" />



        </form>

        
    </div>




</div>

