@{
    ViewBag.Title = "Total Sales";
}

@using Practice1_Web.Models;

<div class=" container-fluid" style="margin:1% ">


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-fw fa-check"></i><h4> <span class="btn btn-default btn-lg disabled"> You All Sales</span>  </h4>
                </div>
            </div>
        </div>
    </div>



    <div class=" table-responsive " align="center">

        <h1 style="color:white">Your Orders And Status </h1>

        @if (Model != null)
        {
            <table border="1" class="table table-bordered" align="center" style="font-size:large;font-family:'Al Qalam Quran Majeed Web'">
                @{int sum = 0;}
                <tr><th>Item ID</th><th>Item Name</th><th>Price</th><td>Quantity</td><td>Sub total</td></tr>
                @foreach (item v in Model)
                {

                    int suma = (@v.Quantity * @v.Price);

                    <tr><td>@v.Id</td><td>@v.Name</td><td>@v.Price</td><td>@v.Quantity</td><td>@suma</td></tr>
                    sum += suma;


                }
                <tr><th>Total</th><th>@sum</th></tr>
            </table>
        }

        <a href="/Home/Index" class="btn btn-default">Do More Shopping</a>


    </div>

</div>