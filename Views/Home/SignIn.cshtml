@{
    ViewBag.Title = "SignIn";
}


<script>
    $(document).ready(f1);
    function f1()
    {
        $('#username').focus();
    }
</script>

<div class="container">
    <div class="row">
        @*shows a white strip at the top*@
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading ">
                    <h4><i class="fa fa-fw fa-check"></i> @ViewBag.headingTitle</h4>
                </div>
            </div>
        </div>
    </div>

    <form action="/Home/LogMeIn" method="post" id="loginform" class="form-horizontal" role="form" style="border:dotted">
        <br /><br />
        <div class="form-group">
            <label for="email" class="col-md-3 control-label">User Name</label>
            <div class="col-md-9">
                <input type="text" class="form-control" id="username" name="UserName" placeholder="User Name" required>
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="col-md-3 control-label">Password</label>
            <div class="col-md-9">
                <input type="password" class="form-control" name="Password" placeholder="Password" required>
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-offset-3 col-md-9">
                <button id="btn-signup" type="submit" class="btn btn-info"> &nbsp Login</button>

            </div>
        </div>


    </form>


</div>
